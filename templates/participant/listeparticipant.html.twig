{% extends 'base.html.twig' %}

{% block body %}

<div class="container">
    <h2>Liste des participants</h2>

    <table class="table table-bordered table-striped" style="background-color: #ADD8E6;">
        <thead>
            <tr>
                <th>#</th>
                <th>Nom</th>
                <th>Email</th>
                <th>Subscribe</th>
                <th>Fonction</th>
                <th>Image</th>
            </tr>
        </thead>
        <tbody>
            {% for p in participant %}
                <tr>
                    <td>{{ p.id }}</td>
                    <td>{{ p.nom | upper }}</td>
                    <td>{{ p.email }}</td>
                    <td>{{ p.issubscribe }}</td>
                    <td>{{ p.fonction }}</td>
                    <td>
                        {% if p.image is not null %}
                            <img src="{{ asset(p.image) }}" class="img-thumbnail" width="100" height="100" alt="Participant Image">
                        {% endif %}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">Aucun participant</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}
